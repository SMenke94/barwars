<div class="full-page">
  <div class="container">
    <h1 class="subtitle-index">Bar deals</h1>

    <!-- Filter toggle button -->
    <%= link_to "#", id: "sticky-filter" do %>
    <div class="filter-button-wrapper sticky-top">
      <div id="filter-button" class="filter text-center">
        <div class="options-icon">
          <div class="line-container">
            <div class="filter-line"></div>
            <div class="circle"></div>
          </div>
          <div class="line-container">
            <div class="filter-line"></div>
            <div class="circle"></div>
          </div>
          <div class="line-container">
            <div class="filter-line"></div>
            <div class="circle"></div>
          </div>
        </div>
        <p>Filter</p>
      </div>
      </div>
    <% end %>

    <!-- Filters box-->
    <%= render 'deals/filter-box' %>


  </div> <!-- Closing header container -->

    <!-- Cards -->
    <div class="deal-wrapper">
      <div class="container text-center">
        <div class="row">
          <% 4.times do %>
          <div class="col-xs-3">
            <div class="deal-info deal-bg-img" style="background-image: url('https://images.unsplash.com/photo-1514933651103-005eec06c04b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=fada82e527ef9eeaa1faed34043b425b&auto=format&fit=crop&w=1267&q=80');">
              <div class="type-icon">
                <i class="fas fa-beer"></i>
              </div>
              <div class="bar-name">
               <p>Bar name</p>
             </div>
             <div class="stats">
              <ul>
                <li>
                  <p class="heading"><i class="fas fa-star-half-alt"></i></p>
                  <p class="footing">3.6</p>
                </li>
                <li class="middlechild">
                  <p class="heading"><i class="fas fa-map-marked-alt"></i></p>
                  <p class="footing">4.2km</p>
                </li>
                <li>
                  <p class="heading"><i class="far fa-clock"></i></p>
                  <p class="footing">17.00</p>
                </li>
              </ul>
              <%= link_to "#", class: "deal-bar-button" do %>
                <div id="bar-button">
                  <h4 class="deal-heading">Happy Hour&nbsp;<span class="deal-price"> 130DKK</span></h4>
                  <p class="deal-footing">All drinks on the menu</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>


      <!-- INDEX TEST -->

    <br>
    <br>
    <br>
    <br>
    <div id="deals-list">
      <%= render partial: "deals/list", locals: { deals: @deals} %>
    </div>

    <!-- INDEX TEST -->

    </div> <!-- Closing card container -->
  </div> <!-- Closing wrapper -->



  <!-- Back to top button -->
  <%= link_to "#", id: "return-to-top" do %>
    <i class="fas fa-chevron-up"></i>
  <% end %>
</div>



