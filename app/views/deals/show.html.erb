<% content_for :meta_title, "Come drink with me at #{@deal.bar.name}" %>
<% content_for :meta_description, "#{@deal.description} for #{@deal.price} DKK"  %>
<% content_for :meta_image, cl_image_path(@deal.bar.photo) %>


<% if @deal.bar.todays_deals.count > 1 %>
  <%= render 'shared/more-deals', deals: @deal.bar.todays_deals.reject { |d| d.id == @deal.id } %>
<% else %>
  <%= render 'shared/one-deal' %>
<% end %>


<!-- Back to top button -->
<%= link_to "#", id: "return-to-top" do %>
  <i class="fas fa-chevron-up"></i>
<% end %>
