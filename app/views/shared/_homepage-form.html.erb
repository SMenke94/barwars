<div class="container text-center">

  <%= form_tag("/deals", method: "get", class: "search-form") do %>

  <%= text_field_tag(:q, value = nil, required: true, oninvalid: "this.setCustomValidity('We need to know where you are!')", placeholder: "Your location", class: "form-control search text-center", id: "bar_address",
  style: "font-size: 14px; width: 300px; margin: 0 auto; margin-bottom: 20px; border-radius: 10px;")
  %>

  <div class="range-slider text-center">
    <%= range_field_tag(:distance, value = 5, class: "range-slider__range", min: 0.5, max: 9.5, step: 0.5) %>
    <span class="range-slider__value">0</span>
  </div>
  <p class="distance-home"><i class="fas fa-map-marker-alt"></i> km</p>

  <%= button_tag(type: 'submit', id: "search-submit", class: "pulse") do %>
    <span id="changingword" style="transition: none;"><i class="fas fa-bolt"></i></span>
    <% end %>
  <% end %>
</div>
