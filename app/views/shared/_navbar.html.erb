<div class="navbar-barwars">

  <!-- Logo -->
  <%= link_to root_path, class: "navbar-barwars-brand" do %>
  <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Link to weekly deals -->
  <%= link_to "#", class: "weekly-deals-button" do %>
    <div> <i class="fas fa-info-circle"></i> Weekly deals</div>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-barwars-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

    <!-- Links when logged in -->
    <%= link_to "My Deallist", "#", class: "navbar-barwars-item navbar-barwars-link" %>

    <!-- Avatar with dropdown menu -->
    <div class="navbar-barwars-item">
      <div class="dropdown">
        <%= image_tag "http://kitt.lebarwars.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-barwars-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-barwars-dropdown-menu">
          <li>
            <%= link_to "#" do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
            <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_up", default: "Register"), "#", class: "navbar-barwars-item navbar-barwars-link barwars-register", "data-toggle": "modal", "data-target": "#exampleModal" %>

    <%= link_to t(".sign_in", default: "LOG IN"), "#", class: "navbar-barwars-item navbar-barwars-link barwars-signin", "data-toggle": "modal", "data-target": "#exampleModal" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->

