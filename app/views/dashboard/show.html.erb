<div class="container text-center">
  <div class="profile-wrapper">
    <div class="profile-info-wrapper">
      <div class="profile-top">
        <div class="my-profile-page">
          <h5>My profile</h5>
        </div>
        <div class="dropdown">
          <button class=" dropdown-toggle profile-menu" type="button" id="profile-menu-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-bars"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-left profile-page navbar-barwars-dropdown-menu">
            <li>
              <%= link_to "#" do %>
              <i class="fas fa-user-edit"></i> &nbsp;&nbsp;Edit profile</i>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
              <i class="far fa-trash-alt"></i> &nbsp; &nbsp; Delete profile</i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
        <% if current_user.photo? %>
          <%= cl_image_tag current_user.photo, :class => "profile-image" %>
        <% else %>
        <%= image_tag "blank-avatar.jpg", :class => "profile-image" %>
        <% end %>
      <div class="user-info text-left">
        <div class="profile-fullname label">
          Full name
        </div>
        <div class="profile-fullname input">
          <%= current_user.full_name %>
        </div>
        <div class="profile-username label">
          Full name
        </div>
        <div class="profile-username input">
          Username
        </div>
        <div class="profile-email label">
          Email address
        </div>
        <div class="profile-email input">
          <%= current_user.email %>
        </div>
      </div>
      <!-- Edit form with update button -->
    </div>
    <div class="my-deals-wrapper">
      <h1 class="my-deals">My saved deals</h1>
      <div class="scrollable-div pre-scrollable">
        <div class="row">
          <%= render 'shared/my-deal' %>
        </div>
      </div>
      <% if current_user.deals.count > 4 %>
        <div class="arrow bounce"><i class="fas fa-angle-down"></i></div>
      <% end %>
    </div>
  </div>
</div>



